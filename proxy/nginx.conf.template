# Docker only has one process
worker_processes 1;

# A lot of connections ?!
events { worker_connections 1024; }

env PROXY_PORT;
env APP_REMOTE;
env API_REMOTE;

http {
    server {
        listen ${PROXY_PORT};

        location / {
            proxy_pass ${APP_REMOTE};
        }

        location /api {
            proxy_pass ${API_REMOTE};
        }
    }
}
