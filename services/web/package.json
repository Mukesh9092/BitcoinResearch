{
  "name": "flush-requires-boilerplate-webpack-chunknames",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "1.0.0",
  "main": "server/index.ts",
  "author": "James Gillmore <james@faceyspacey.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf dist",
    "lint": "tslint --project .",
    "fix": "tslint --project . --fix",
    "prettier": "prettier --write ./**/*.tsx ./**/*.ts",
    "test": "jest",
    "dev": "npm run start",
    "start": "npm run clean; NODE_ENV=development babel-node --extensions '.js,.jsx,.ts,.tsx' index.ts",
    "start:prod": "NODE_ENV=production babel-node --extensions '.js,.jsx,.ts,.tsx' index.ts"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --single-quote --semi=false --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.0.0-beta.42",
    "@babel/core": "^7.0.0-beta.42",
    "@babel/node": "^7.0.0-beta.42",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.42",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.42",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/preset-react": "^7.0.0-beta.42",
    "@babel/preset-stage-3": "^7.0.0-beta.42",
    "@babel/preset-typescript": "^7.0.0-beta.42",
    "@blueprintjs/core": "^1.35.7",
    "@types/express": "^4.11.1",
    "@types/history": "^4.6.2",
    "@types/jest": "^22.2.0",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-hot-loader": "^3.0.6",
    "@types/react-loadable": "^5.3.3",
    "@types/react-router": "^4.0.23",
    "@types/react-router-dom": "^4.2.5",
    "@types/webpack": "^4.1.1",
    "@types/webpack-dev-middleware": "^2.0.1",
    "@types/webpack-hot-middleware": "^2.16.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-import-inspector": "^2.0.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-plugin-universal-import": "^1.4.0",
    "colors": "^1.2.1",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "emotion": "^9.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "express": "^4.16.3",
    "express-no-favicons": "^0.0.1",
    "extract-css-chunks-webpack-plugin": "^2.0.18",
    "file-loader": "^1.1.11",
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "isomorphic-style-loader": "^4.0.0",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.5",
    "morgan": "^1.9.0",
    "normalize.css": "^8.0.0",
    "postcss-loader": "^2.1.2",
    "prettier": "^1.11.1",
    "react": "^16.2.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0",
    "react-loadable": "^5.3.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.20.3",
    "travis-github-status": "^1.6.3",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "unhandled-error": "^1.0.0",
    "webpack": "^4.1.1",
    "webpack-dev-middleware": "^3.0.1",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-hot-server-middleware": "^0.5.0",
    "webpack-node-externals": "^1.6.0",
    "write-file-webpack-plugin": "^4.2.0"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0"
  }
}
